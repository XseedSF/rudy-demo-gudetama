{
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest/globals": true,
  },
  "plugins": [ "react", "jest" ],
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
      },
    "sourceType": "module",
  },
  "extends": [ "eslint:recommended", "plugin:react/recommended" ],
  "indent": ["error", 2],
  "globals": {
    "DEPLOY_PATH": true
  }
}